{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ],
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "outDir": ".build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  }
}
